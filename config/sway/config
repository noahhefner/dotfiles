# Sway configuration

include $HOME/.config/sway/keybindings
include $HOME/.config/sway/colors
include @sysconfdir@/sway/config.d/*

# Fix GTK+ applications take 20 seconds to start
exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK

# Mako notification daemon
exec mako

# Background
exec_always swaybg --mode fill --image $HOME/.local/share/dotfiles/wallpapers/arch.png

# Waybar
bar {
  swaybar_command waybar
}

# Remove header and keep only 2px border
default_border pixel 4

# Window gaps
gaps inner 8px

output * mode 1920x1080 pos 1920 0